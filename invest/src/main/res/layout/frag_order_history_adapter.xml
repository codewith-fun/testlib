<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <investwell.utils.customView.CustomTextViewRegular
                android:id="@+id/scheme"
                style="@style/FormTextViewStyling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/primaryButtonBackground"
                android:padding="7dp"

                android:textColor="@color/colorWhite" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp">

                <investwell.utils.customView.CustomTextViewRegular
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/additional_switch_amount_txt"
                    android:textSize="@dimen/textView_all_size_14" />

                <investwell.utils.customView.CustomTextViewBold
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv1"
                    android:textColor="?attr/accentColor"
                    android:textSize="@dimen/textView_all_size_16"
                    android:textStyle="bold" />

                <investwell.utils.customView.CustomTextViewRegular
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/txt_Order_No"
                    android:textSize="@dimen/textView_all_size_14" />

                <investwell.utils.customView.CustomTextViewRegular
                    android:id="@+id/order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv2"
                    android:layout_alignParentRight="true"
                    android:textColor="?attr/primaryTextColor"
                    android:textSize="@dimen/textView_all_size_14" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c5c4c4" />

            <investwell.utils.customView.CustomTextViewRegular
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="7dp"
                android:text="@string/txt_date"
                android:textSize="@dimen/textView_all_size_14" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>

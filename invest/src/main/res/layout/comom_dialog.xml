
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/linerMain">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorGrey_300"
        >


        <investwell.utils.customView.CustomTextViewBold
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="@string/txt_locate_us"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textView_all_size_16"
            android:textStyle="bold" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <investwell.utils.customView.CustomTextViewRegular
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:textSize="@dimen/textView_all_size_16"
            android:gravity="center"
            android:textColor="?attr/primaryTextColor"/>


    </LinearLayout>

    <investwell.utils.customView.CustomButton
        android:id="@+id/tvOk"
        android:layout_width="@dimen/btn_width_medium"
        android:layout_height="@dimen/btn_height_medium"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="?attr/primaryBtnDrawable"
        android:gravity="center"
        android:text="@string/txt_ok"
        android:textColor="?attr/primaryButtonTextColor"
        android:textSize="@dimen/textView_all_size_18"
        android:textStyle="bold" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_container_share_bond"
    style="@style/CardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_header_share_bond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <investwell.utils.customView.CustomTextViewRegular
                android:id="@+id/tv_user_portfolio_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/padding_all_very_small"
                android:text="@string/app_name"
                android:textSize="@dimen/textView_all_size_16" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_footer_data_share_bond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_header_share_bond"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <investwell.utils.customView.CustomTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_all_very_small"
                    android:text="@string/share_bond__portfolio_tv_start_date_value_txt"
                    android:textColor="?attr/secondaryTextColor"
                    android:textSize="@dimen/textView_all_size_12" />

                <investwell.utils.customView.CustomTextViewRegular
                    android:id="@+id/tv_start_date_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/padding_all_very_small"
                    android:paddingLeft="@dimen/padding_all_very_small"
                    android:paddingEnd="@dimen/padding_all_very_small"
                    android:paddingRight="@dimen/padding_all_very_small"
                    android:text="@string/share_bond__portfolio_tv_initial_value_txt"
                    android:textColor="?attr/primaryTextColor"
                    android:textSize="@dimen/textView_all_size_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <investwell.utils.customView.CustomTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="@dimen/padding_all_very_small"
                    android:text="@string/share_bond__portfolio_tv_amnt_value_txt"
                    android:textColor="?attr/secondaryTextColor"
                    android:textSize="@dimen/textView_all_size_12" />

                <investwell.utils.customView.CustomTextViewRegular
                    android:id="@+id/tv_amount_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingStart="@dimen/padding_all_very_small"
                    android:paddingLeft="@dimen/padding_all_very_small"
                    android:paddingEnd="@dimen/padding_all_very_small"
                    android:paddingRight="@dimen/padding_all_very_small"
                    android:text="@string/share_bond__portfolio_tv_initial_value_txt"
                    android:textColor="?attr/primaryTextColor"

                    android:textSize="@dimen/textView_all_size_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <investwell.utils.customView.CustomTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:padding="@dimen/padding_all_very_small"
                    android:text="@string/share_bond__portfolio_tv_period_value_txt"
                    android:textColor="?attr/secondaryTextColor"
                    android:textSize="@dimen/textView_all_size_12" />

                <investwell.utils.customView.CustomTextViewRegular
                    android:id="@+id/tv_period_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingStart="@dimen/padding_all_very_small"
                    android:paddingLeft="@dimen/padding_all_very_small"
                    android:paddingEnd="@dimen/padding_all_very_small"
                    android:paddingRight="@dimen/padding_all_very_small"
                    android:text="@string/share_bond__portfolio_tv_initial_value_txt"
                    android:textColor="?attr/primaryTextColor"
                    android:textSize="@dimen/textView_all_size_14" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/v_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ll_footer_data_share_bond"
            android:layout_margin="@dimen/margin_all_very_small" />

        <investwell.utils.customView.CustomTextViewRegular
            android:id="@+id/tv_years_of_compounding_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_divider"
            android:padding="@dimen/padding_all_very_small"
            android:text="@string/fixed_deposit_years_of_compunding"
            android:textColor="?attr/secondaryTextColor"
            android:textSize="@dimen/textView_all_size_12"
            android:textStyle="italic" />

        <investwell.utils.customView.CustomTextViewRegular
            android:id="@+id/tv_years_of_compounding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_divider"
            android:layout_toEndOf="@+id/tv_years_of_compounding_placeholder"
            android:layout_toRightOf="@+id/tv_years_of_compounding_placeholder"
            android:padding="@dimen/padding_all_very_small"
            android:textColor="?attr/secondaryTextColor"
            android:textSize="@dimen/textView_all_size_12" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <fragment
        android:id="@+id/frag_toolBar"
        android:name="investwell.client.fragment.others.ToolbarFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <investwell.utils.customView.CustomTextViewRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:textSize="@dimen/textView_all_size_14"
            android:text="@string/txt_cheque_heading"
            android:gravity="center_horizontal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:src="@mipmap/cheque"/>





        <investwell.utils.customView.CustomButton
            android:id="@+id/tvUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linerLogin"
            android:padding="@dimen/padding_all_small"
            android:layout_marginStart="@dimen/margin_all_large"
            android:layout_marginEnd="@dimen/margin_all_large"
            android:layout_marginTop="@dimen/login_middle_content_top_margin_30"
            android:layout_marginBottom="0dp"
            android:background="?attr/primaryBtnDrawable"
            android:gravity="center"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:text="@string/txt_upload_cheque"
            android:textColor="?attr/primaryButtonTextColor"
            android:textSize="@dimen/textView_all_size_18"
           />

    </LinearLayout>

</RelativeLayout>

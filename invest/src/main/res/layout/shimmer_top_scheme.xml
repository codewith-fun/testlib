<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="@dimen/margin_all_very_small"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="@dimen/card_corner_all_radius_small"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="50dp"

                android:layout_margin="@dimen/margin_all_small">

                <View

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@color/colorShimmerBackground"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/padding_all_very_small"
                  />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/margin_all_very_small"
            android:layout_weight="5"
            android:orientation="vertical">

            <View

                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_gravity="top"
                android:background="@color/colorShimmerBackground"
                tools:text="@string/app_name" />

            <View

                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_marginEnd="@dimen/margin_all_large"
                android:background="@color/colorShimmerBackground"
                tools:text="@string/app_name"
                android:layout_marginRight="@dimen/margin_all_large" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.5"
            android:orientation="vertical"
            tools:ignore="NestedWeights">

            <View

                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_all_small"
                android:layout_margin="@dimen/margin_all_small"
                android:background="@color/colorShimmerBackground"
                android:gravity="center"
                android:padding="@dimen/padding_all_very_small" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/margin_all_very_small"
            android:layout_weight="1.5"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:ignore="NestedWeights,UselessParent">

                <View

                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_all_small"
                    android:background="@color/colorShimmerBackground" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
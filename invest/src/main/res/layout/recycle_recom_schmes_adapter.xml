<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="@dimen/margin_all_small"
    android:padding="@dimen/padding_all_small"
    style="@style/CardViewStyle">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:id="@+id/relImage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/dialogBackground">

                <ImageView
                    android:id="@+id/bucket_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/padding_all_very_small"
                    android:contentDescription="@string/app_name" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_all_small"
            android:layout_marginBottom="@dimen/margin_all_small"
            android:layout_weight="7.5"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/margin_all_very_small"
            android:layout_marginEnd="@dimen/margin_all_very_small"
            >

            <investwell.utils.customView.CustomTextViewBold
                android:id="@+id/tv_scheme_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="?attr/primaryTextColor"
                android:textSize="@dimen/textView_all_size_14" />

            <investwell.utils.customView.CustomTextViewRegular
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="?attr/secondaryTextColor"
                android:text="@string/txt_Sample"
                android:textSize="@dimen/textView_all_size_14" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/forward_arrow"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/padding_all_very_small" />
        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>
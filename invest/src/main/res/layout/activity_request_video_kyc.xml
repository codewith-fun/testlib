<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <investwell.utils.customView.CustomTextViewBold
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_all_large"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_horizontal"
        android:text="Video KYC"
        android:textColor="?attr/primaryTextColor"
        android:textSize="@dimen/textView_all_size_30"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_contact" />


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_all_large"
        android:layout_marginLeft="@dimen/margin_all_large"
        android:layout_marginTop="@dimen/margin_all_large"
        android:layout_marginEnd="@dimen/margin_all_large"
        android:layout_marginRight="@dimen/margin_all_large"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:paddingStart="@dimen/padding_all_regular"
        android:paddingLeft="@dimen/padding_all_regular"
        android:paddingTop="@dimen/padding_all_regular"
        android:paddingEnd="@dimen/padding_all_regular"
        android:paddingRight="@dimen/padding_all_regular"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintWidth_percent="0.7"
        app:srcCompat="@drawable/request_video_kyc" />

    <investwell.utils.customView.CustomTextViewRegular
        android:id="@+id/textView12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_all_regular"
        android:layout_marginTop="@dimen/margin_all_large"
        android:layout_marginEnd="@dimen/margin_all_regular"
        android:layout_marginBottom="@dimen/margin_all_regular"
        android:gravity="center_horizontal"
        android:padding="@dimen/padding_all_very_small"
        android:textColor="?attr/primaryTextColor"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <LinearLayout
        android:id="@+id/ll_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/primaryBtnDrawable"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12">

        <investwell.utils.customView.CustomTextViewBold
            android:id="@+id/tv_request_video_kyc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_all_very_small"
            android:layout_marginBottom="@dimen/margin_all_large"
            android:adjustViewBounds="true"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:paddingStart="@dimen/margin_all_large"
            android:paddingLeft="@dimen/margin_all_large"
            android:paddingTop="12dp"
            android:paddingEnd="@dimen/padding_all_large"
            android:paddingRight="@dimen/padding_all_large"
            android:paddingBottom="12dp"
            android:text="Request Video Kyc Again"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textView_all_size_16"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <ProgressBar
            android:id="@+id/pb_request"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_all_small"
            android:background="@drawable/circle_key_selector_pf"
            android:visibility="gone" />

    </LinearLayout>


    <ImageView
        android:id="@+id/iv_contact"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/margin_all_small"
        android:layout_marginRight="8dp"
        android:adjustViewBounds="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="@string/app_name"
        android:focusable="true"
        android:padding="@dimen/padding_all_very_small"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/otp_contact" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/padding_all_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_arrow" />


</androidx.constraintlayout.widget.ConstraintLayout>


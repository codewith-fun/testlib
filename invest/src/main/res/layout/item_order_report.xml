<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_all_small">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_all_small">

        <investwell.utils.customView.CustomTextViewBold
            android:id="@+id/tv_scheme_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_all_very_small"
            android:text=""
            android:textColor="?attr/primaryTextColor"
            android:textSize="@dimen/textView_all_size_12"
            android:textStyle="bold" />

        <investwell.utils.customView.CustomTextViewRegular
            android:id="@+id/tv_transac_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_scheme_name"
            android:text=""
            android:paddingLeft="@dimen/padding_all_very_small"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textView_all_size_10" />


        <LinearLayout
            android:id="@+id/ll_middle_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_transac_type"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding_all_very_small"
            android:paddingLeft="@dimen/padding_all_very_small"
            android:paddingEnd="@dimen/padding_all_very_small"
            android:paddingRight="@dimen/padding_all_very_small">

            <investwell.utils.customView.CustomTextViewRegular
                android:id="@+id/tv_investor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text=""
                android:textColor="?attr/secondaryTextColor"
                android:textSize="@dimen/textView_all_size_12"
                android:visibility="gone" />

            <investwell.utils.customView.CustomTextViewRegular
                android:id="@+id/tv_folio_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text=""
                android:textColor="?attr/secondaryTextColor"
                android:textSize="@dimen/textView_all_size_10" />



            <investwell.utils.customView.CustomTextViewRegular
                android:id="@+id/tv_order_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text=""
                android:textColor="?attr/secondaryTextColor"
                android:textSize="@dimen/textView_all_size_10" />



        </LinearLayout>


        <LinearLayout
            android:id="@+id/llMidle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_middle_container"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding_all_very_small"
            android:paddingLeft="@dimen/padding_all_very_small"
            android:paddingEnd="@dimen/padding_all_very_small"

            android:paddingRight="@dimen/padding_all_very_small"
            android:paddingBottom="@dimen/padding_all_very_small">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <investwell.utils.customView.CustomTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/status_txt"
                    android:textColor="?attr/secondaryTextColor"
                    android:textSize="@dimen/textView_all_size_10" />



                <investwell.utils.customView.CustomTextViewRegular
                    android:id="@+id/tv_transac_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="@dimen/margin_5dp"
                    android:textStyle="italic"
                    android:textColor="@color/colorPrimary"
                    android:paddingBottom="@dimen/padding_all_very_small"
                    android:textSize="@dimen/textView_all_size_10" />

            </LinearLayout>




            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/ll_middle_container"
                android:background="@color/colorGrey_250"

                android:padding="@dimen/padding_all_very_small" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <investwell.utils.customView.CustomTextViewRegular
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:paddingTop="@dimen/padding_all_very_small"
                    android:textColor="?attr/secondaryTextColor"
                    android:textSize="@dimen/textView_all_size_10" />

                <investwell.utils.customView.CustomTextViewBold
                    android:id="@+id/tv_transac_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:paddingStart="@dimen/padding_all_very_small"
                    android:paddingLeft="@dimen/padding_all_very_small"
                    android:paddingTop="@dimen/padding_all_very_small"
                    android:paddingEnd="@dimen/padding_all_very_small"
                    android:paddingRight="@dimen/padding_all_very_small"
                    android:text=""
                    android:textColor="?attr/primaryTextColor"
                    android:textSize="@dimen/textView_all_size_10" />
            </RelativeLayout>


            <investwell.utils.customView.CustomTextViewRegular
                android:id="@+id/tv_member_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="?attr/secondaryTextColor"
                android:textSize="@dimen/textView_all_size_12"
                android:visibility="gone" />


        </LinearLayout>

        <View
            android:id="@+id/v_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:visibility="gone"
            android:layout_below="@+id/llMidle"
            android:background="@color/colorGrey_250"
            android:padding="@dimen/padding_all_very_small" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_divider"
            android:orientation="horizontal"
            android:paddingStart="@dimen/padding_all_very_small"
            android:paddingLeft="@dimen/padding_all_very_small"
            android:visibility="gone"
            android:paddingTop="@dimen/padding_all_very_small"
            android:paddingEnd="@dimen/padding_all_very_small"
            android:paddingRight="@dimen/padding_all_very_small">


            <TextView
                android:id="@+id/tv_rejected_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="?attr/secondaryTextColor"
                android:textSize="@dimen/textView_all_size_10"
                android:textStyle="italic" />
        </LinearLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>
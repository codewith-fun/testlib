<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_sip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CardViewStyle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite">
            <investwell.utils.customView.CustomTextViewBold
                android:id="@+id/tv_dialog_heading"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:textSize="@dimen/textView_all_size_14"
                android:fontFamily="sans-serif"
                android:padding="8dp"
                android:text="@string/help_next_installment_date"
                android:layout_height="wrap_content"
                android:textColor="@color/colorYellow"
                tools:targetApi="jelly_bean" />
            <investwell.utils.customView.CustomTextViewRegular
                android:id="@+id/tv_dialog_content"
                android:layout_width="match_parent"
                android:textSize="@dimen/textView_all_size_10"
                android:fontFamily="sans-serif"
                android:layout_height="wrap_content"
                android:textColor="?attr/secondaryTextColor"
                android:layout_below="@+id/tv_dialog_heading"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:text="@string/sip_invest_dialog_header"
                android:paddingStart="8dp"
                tools:targetApi="jelly_bean" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</layout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="investwell.client.fragment.others.ChooserFragment">

    <investwell.utils.customView.CustomTextViewRegular
        android:id="@+id/tv_chooser_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_all_very_small"
        android:text=""
        android:textColor="?attr/secondaryTextColor"
        android:layout_marginStart="@dimen/margin_5dp"
        android:layout_marginLeft="@dimen/margin_5dp"
        android:layout_marginEnd="@dimen/margin_5dp"
        android:layout_marginRight="@dimen/margin_5dp"
        android:textAllCaps="false"

        android:textSize="@dimen/textView_all_size_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="vertical">

            <investwell.utils.customView.CustomButton
                android:id="@+id/btn_primary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height_small35"
                android:visibility="gone"
                android:textSize="@dimen/textView_all_size_10"
                android:textAllCaps="false"

                android:textColor="@color/colorWhite"
                android:background="?attr/primaryBtnDrawable"
                android:layout_margin="@dimen/margin_5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="vertical">

            <investwell.utils.customView.CustomButton
                android:id="@+id/btn_secondary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height_small35"
                android:visibility="gone"
                android:textAllCaps="false"

                android:textSize="@dimen/textView_all_size_10"
                android:textColor="?attr/primaryTextColor"
                android:background="?attr/tertiaryBtnDrawable"
                android:layout_margin="@dimen/margin_5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="vertical">

            <investwell.utils.customView.CustomButton
                android:id="@+id/btn_tertiary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height_small35"
                android:background="?attr/tertiaryBtnDrawable"
                android:visibility="gone"
                android:textSize="@dimen/textView_all_size_10"
                android:textAllCaps="false"
                android:textColor="?attr/primaryTextColor"
                android:layout_margin="@dimen/margin_5dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llUpi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="vertical"
            android:visibility="gone">

            <investwell.utils.customView.CustomButton
                android:id="@+id/btnUpi"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height_small35"
                android:background="?attr/tertiaryBtnDrawable"
                android:textSize="@dimen/textView_all_size_10"
                android:textAllCaps="false"
                android:textColor="?attr/primaryTextColor"
                android:layout_margin="@dimen/margin_5dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_invest"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="?attr/selectableItemBackground"
    android:baselineAligned="false"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_home_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/app_icon_s"
            android:scaleType="fitXY"
            android:visibility="gone" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_home_element"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/padding_all_small"
                    android:visibility="gone"
                    android:src="@mipmap/app_icon_s" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="UselessParent">

                    <investwell.utils.customView.CustomTextViewBold
                        android:id="@+id/tv_home_element_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginStart="@dimen/margin_all_small"
                        android:layout_marginLeft="@dimen/margin_all_small"
                        android:layout_marginTop="@dimen/margin_all_medium"
                        android:ellipsize="end"
                        android:text="@string/app_name"
                        android:textColor="?attr/primaryTextColor"
                        android:textSize="@dimen/textView_all_size_16"
                        android:textStyle="bold"
                        tools:ignore="RelativeOverlap" />

                    <investwell.utils.customView.CustomTextViewRegular
                        android:id="@+id/tv_home_element_desc"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_home_element_header"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/margin_all_small"
                        android:layout_marginLeft="@dimen/margin_all_small"
                        android:ellipsize="end"
                        android:maxLength="80"
                        android:maxLines="1"
                        android:text="@string/empty_desc_desc_txt"
                        android:textColor="?attr/primaryTextColor"
                        android:textSize="@dimen/textView_all_size_12"
                        android:textStyle="bold"
                        tools:ignore="RelativeOverlap" />

                    <investwell.utils.customView.CustomTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_home_element_desc"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginStart="@dimen/margin_all_small"
                        android:layout_marginLeft="@dimen/margin_all_small"
                        android:ellipsize="end"
                        android:text="@string/app_name"
                        android:textColor="?attr/primaryTextColor"
                        android:textSize="@dimen/textView_all_size_16"
                        android:textStyle="bold"
                        android:visibility="gone"
                        tools:ignore="RelativeOverlap" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/margin_all_very_small"
                        android:contentDescription="@string/app_name"
                        android:padding="@dimen/padding_all_very_small"
                        android:src="@drawable/ic_dasboard_proceed" />

                    <View
                        android:id="@+id/v_divider_routes"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="@dimen/margin_all_small"
                        android:background="@color/colorGrey_200"
                        android:padding="@dimen/padding_all_very_small" />
                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>

    </FrameLayout>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_all_small">

    <View
        android:id="@+id/v1"
        android:layout_width="200dp"
        android:layout_height="10dp"

        android:layout_margin="@dimen/margin_all_very_small"
        android:background="@color/colorGrey_200" />

    <View
        android:id="@+id/v2"
        android:layout_width="180dp"
        android:layout_height="10dp"
        android:layout_below="@+id/v1"
        android:layout_margin="@dimen/margin_all_very_small"
        android:background="@color/colorGrey_200" />

    <View
        android:id="@+id/v3"
        android:layout_width="150dp"
        android:layout_height="10dp"
        android:layout_below="@+id/v2"

        android:layout_margin="@dimen/margin_all_very_small"
        android:background="@color/colorGrey_200" />

    <View
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/colorGrey_200" />

    <View
        android:id="@+id/v5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/v3"
        android:layout_marginTop="@dimen/margin_all_small"
        android:background="@color/colorGrey_200" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v5"
        android:orientation="horizontal"
        android:weightSum="15">

        <View
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/margin_all_small"
            android:layout_weight="5"
            android:background="@color/colorGrey_200" />

        <View
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/margin_all_small"
            android:layout_weight="5"
            android:background="@color/colorGrey_200" />

        <View
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/margin_all_small"
            android:layout_weight="5"
            android:background="@color/colorGrey_200" />

    </LinearLayout>
</RelativeLayout>
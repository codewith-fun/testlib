<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="horizontal"
    android:weightSum="10">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_call"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_all_small"
        android:layout_weight="5"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_all_regular"
            android:paddingBottom="@dimen/padding_all_regular"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:padding="@dimen/padding_all_small"
                android:contentDescription="@string/app_name"
                android:src="@drawable/dialog_call" />
            <investwell.utils.customView.CustomTextViewRegular
                android:layout_width="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textColor="?attr/primaryTextColor"
                android:textSize="@dimen/textView_all_size_14"
                android:layout_margin="@dimen/margin_all_very_small"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/help_call_txt"
                android:padding="@dimen/padding_all_very_small"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_mail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_all_small"
        android:layout_weight="5"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_all_regular"
            android:paddingBottom="@dimen/padding_all_regular"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:padding="@dimen/padding_all_small"
                android:contentDescription="@string/app_name"
                android:src="@drawable/dialog_email" />
            <investwell.utils.customView.CustomTextViewRegular
                android:layout_width="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textColor="?attr/primaryTextColor"
                android:textSize="@dimen/textView_all_size_14"
                android:layout_margin="@dimen/margin_all_very_small"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="E-mail"
                android:padding="@dimen/padding_all_very_small"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
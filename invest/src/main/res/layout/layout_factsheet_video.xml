<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardViewStyle"
    android:id="@+id/video_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_all_small"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_toLeftOf="@+id/ivVideoPlay">


            <investwell.utils.customView.CustomTextViewRegular
                android:layout_width="wrap_content"
                android:id="@+id/factsheet_video_title"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_all_very_small"
                android:text="dssdsdsds"
                android:textStyle="bold"
                android:textColor="?attr/primaryTextColor"
                android:textSize="@dimen/textView_all_size_14" />

            <investwell.utils.customView.CustomTextViewRegular
                android:id="@+id/factsheet_video_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_all_very_small"
                android:text="sdsdsdsd"
                android:textColor="?attr/primaryTextColor"
                android:textSize="@dimen/textView_all_size_12"
                android:layout_marginLeft="@dimen/margin_all_very_small" />


        </LinearLayout>

        <ImageView
            android:id="@+id/ivVideoPlay"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_video_play2"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>




    </RelativeLayout>

</androidx.cardview.widget.CardView>
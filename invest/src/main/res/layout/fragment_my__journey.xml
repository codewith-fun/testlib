<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipetorefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutAnimation="@anim/layout_animation_fall_down"
            android:orientation="vertical">

            <fragment
                android:id="@+id/frag_toolBar"
                android:name="investwell.client.fragment.others.ToolbarFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                style="@style/CardViewStyle"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <investwell.utils.customView.CustomTextViewRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:text="@string/Purchase"
                            android:textColor="?attr/primaryTextColor"
                            android:textSize="@dimen/textView_all_size_14" />


                        <investwell.utils.customView.CustomTextViewRegular
                            android:id="@+id/purchase"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:textColor="?attr/primaryTextColor"
                            android:textSize="@dimen/textView_all_size_16" />
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="#f2f2f2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorGrey_100"
                        android:orientation="horizontal">


                        <investwell.utils.customView.CustomTextViewRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:textColor="@color/colorBlack"

                            android:text="@string/SwitchIn"
                            android:textSize="@dimen/textView_all_size_14" />


                        <investwell.utils.customView.CustomTextViewRegular
                            android:id="@+id/switchin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/textView_all_size_16" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="#f2f2f2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <investwell.utils.customView.CustomTextViewRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:textColor="?attr/primaryTextColor"

                            android:text="@string/SwitchOut"
                            android:textSize="@dimen/textView_all_size_14" />


                        <investwell.utils.customView.CustomTextViewRegular
                            android:id="@+id/switchout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:textColor="?attr/primaryTextColor"
                            android:textSize="@dimen/textView_all_size_16" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="#f2f2f2" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorGrey_100"
                        android:orientation="horizontal">

                        <investwell.utils.customView.CustomTextViewRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:textColor="@color/colorBlack"

                            android:layout_weight="1"
                            android:text="@string/Sell"
                            android:textSize="@dimen/textView_all_size_14" />


                        <investwell.utils.customView.CustomTextViewRegular
                            android:id="@+id/sell"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/textView_all_size_16" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="#f2f2f2" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <investwell.utils.customView.CustomTextViewRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:text="@string/DivAmount"
                            android:textColor="?attr/primaryTextColor"

                            android:textSize="@dimen/textView_all_size_14" />

                        <investwell.utils.customView.CustomTextViewRegular
                            android:id="@+id/dev_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:textColor="?attr/primaryTextColor"
                            android:textSize="@dimen/textView_all_size_16" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="#f2f2f2" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorGrey_100"

                        android:orientation="horizontal">

                        <investwell.utils.customView.CustomTextViewRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:text="@string/NetInvestment"
                            android:textColor="@color/colorBlack"

                            android:textSize="@dimen/textView_all_size_14" />

                        <investwell.utils.customView.CustomTextViewRegular
                            android:id="@+id/net_investment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/textView_all_size_16" />
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="#f2f2f2" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <investwell.utils.customView.CustomTextViewRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:text="@string/CurrentValue"
                            android:textColor="?attr/primaryTextColor"

                            android:textSize="@dimen/textView_all_size_14" />

                        <investwell.utils.customView.CustomTextViewRegular
                            android:id="@+id/current_val"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:textColor="?attr/primaryTextColor"
                            android:textSize="@dimen/textView_all_size_16" />
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="#f2f2f2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorGrey_100"

                        android:orientation="horizontal">

                        <investwell.utils.customView.CustomTextViewRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:text="@string/TotalGain"
                            android:textColor="@color/colorBlack"

                            android:textSize="@dimen/textView_all_size_14" />

                        <investwell.utils.customView.CustomTextViewRegular
                            android:id="@+id/total_gain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/textView_all_size_16" />
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="#f2f2f2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <investwell.utils.customView.CustomTextViewRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:textColor="?attr/primaryTextColor"

                            android:layout_weight="1"
                            android:text="@string/XIRR_return_txt"
                            android:textSize="@dimen/textView_all_size_14" />


                        <investwell.utils.customView.CustomTextViewRegular
                            android:id="@+id/xiir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:textColor="?attr/primaryTextColor"
                            android:textSize="@dimen/textView_all_size_16" />

                    </LinearLayout>




                </LinearLayout>
            </androidx.cardview.widget.CardView>





        </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <include
        android:id="@+id/content_no_data"
        layout="@layout/content_no_data_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />

</FrameLayout>
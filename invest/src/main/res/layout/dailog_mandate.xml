<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    style="@style/CardViewStyle"
    android:layout_margin="@dimen/margin_all_very_small"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/primaryButtonBackground"
                android:orientation="horizontal">

                <investwell.utils.customView.CustomTextViewRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="@dimen/textView_all_size_18"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/txt_AadhaarMandate"/>
                <!-- <ImageView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:layout_marginRight="10dp"
                     android:background="@drawable/close"/>
     -->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <investwell.utils.customView.CustomTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_ForAadhaarMandate"
                    android:textSize="@dimen/textView_all_size_14"
                    android:layout_margin="3dp"
                    android:textColor="?attr/primaryTextColor"
                    android:textAlignment="center"/>

                <investwell.utils.customView.CustomTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/aadhar_notes"
                    android:textColor="?attr/primaryTextColor"
                    android:layout_margin="3dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">


                <investwell.utils.customView.CustomButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ready_btn"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:layout_margin="3dp"
                    android:background="?attr/primaryBtnDrawable"
                    android:text="@string/txt_m_Ready"
                    android:textColor="?attr/primaryButtonTextColor"/>



                <investwell.utils.customView.CustomButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/notready_btn"
                    android:background="?attr/secondaryBtnDrawable"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:layout_margin="3dp"
                    android:textColor="?attr/secondaryButtonTextColor"
                    android:text="@string/txt_m_not_Ready"/>
            </LinearLayout>



        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

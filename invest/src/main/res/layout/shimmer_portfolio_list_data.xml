<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_top_dash"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="@dimen/padding_all_very_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_width="180dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@color/colorGrey_200"
                android:layout_margin="@dimen/margin_all_regular"
                android:id="@+id/v_top"
                android:layout_height="@dimen/margin_10dp"/>
            <View
                android:id="@+id/v1"
                android:layout_width="100dp"
                android:layout_height="6dp"
                android:layout_margin="@dimen/margin_all_regular"
                android:background="@color/colorGrey_200"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v_top" />

            <View
                android:id="@+id/v2"
                android:layout_width="100dp"
                android:layout_height="6dp"
                android:layout_margin="@dimen/margin_all_regular"
                android:background="@color/colorGrey_200"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/v1"
                app:layout_constraintTop_toBottomOf="@+id/v_top" />

            <View
                android:id="@+id/v3"
                android:layout_width="150dp"
                android:layout_height="@dimen/margin_10dp"
                android:layout_margin="@dimen/margin_all_regular"
                android:background="@color/colorGrey_200"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v1" />

            <View
                android:id="@+id/v4"
                android:layout_width="150dp"
                android:layout_height="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_all_regular"
                android:background="@color/colorGrey_200"

                app:layout_constraintBottom_toBottomOf="@+id/v3"
                app:layout_constraintStart_toStartOf="@+id/v2"
                app:layout_constraintTop_toBottomOf="@+id/v2" />

            <View
                android:id="@+id/v6"
                android:layout_width="100dp"
                android:layout_height="6dp"
                android:layout_marginStart="@dimen/margin_all_regular"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="@dimen/margin_all_regular"
                android:background="@color/colorGrey_200"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v3" />

            <View
                android:id="@+id/v7"
                android:layout_width="100dp"
                android:layout_height="6dp"
                android:layout_marginStart="@dimen/margin_all_regular"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="@dimen/margin_all_regular"
                android:background="@color/colorGrey_200"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/v6"
                app:layout_constraintTop_toBottomOf="@+id/v4" />

            <View
                android:id="@+id/v8"
                android:layout_width="150dp"
                android:layout_height="@dimen/margin_10dp"
                android:layout_margin="@dimen/margin_all_regular"
                android:background="@color/colorGrey_200"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v6" />

            <View
                android:id="@+id/v9"
                android:layout_width="150dp"
                android:layout_height="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_all_regular"
                android:background="@color/colorGrey_200"
                app:layout_constraintBottom_toBottomOf="@+id/v8"
                app:layout_constraintStart_toStartOf="@+id/v7"
                app:layout_constraintTop_toBottomOf="@+id/v7" />

            <View
                android:id="@+id/v5"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="@dimen/margin_all_regular"
                android:background="@color/colorGrey_200"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/v7" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
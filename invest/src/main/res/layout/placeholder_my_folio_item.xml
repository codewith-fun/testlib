<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
         xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_all_very_small"
    app:cardCornerRadius="@dimen/card_corner_all_radius_small"
    app:cardBackgroundColor="?attr/cardBgColor"
    app:cardElevation="@dimen/card_all_elevation">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <View
        android:layout_width="50dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_all_very_small"
        android:background="@color/colorShimmerBackground" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <View

                android:layout_width="50dp"
                android:layout_height="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/thumbnail"
                android:background="@color/colorShimmerBackground" />

            <View

                android:layout_width="50dp"
                android:layout_height="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/thumbnail"
                android:background="@color/colorShimmerBackground" />
            <View

                android:layout_width="50dp"
                android:layout_height="10dp"
                android:layout_marginStart="@dimen/margin_all_small"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/thumbnail"
                android:background="@color/colorShimmerBackground"
                android:layout_marginLeft="@dimen/margin_all_small" />

            <View

                android:layout_width="50dp"
                android:layout_height="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/thumbnail"
                android:background="@color/colorShimmerBackground" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <View

                android:layout_width="50dp"
                android:layout_height="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/thumbnail"
                android:background="@color/colorShimmerBackground" />

            <View

                android:layout_width="50dp"
                android:layout_height="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/thumbnail"
                android:background="@color/colorShimmerBackground" />
            <View

                android:layout_width="50dp"
                android:layout_height="10dp"
                android:layout_marginStart="@dimen/margin_all_small"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/thumbnail"
                android:background="@color/colorShimmerBackground"
                android:layout_marginLeft="@dimen/margin_all_small" />

            <View

                android:layout_width="50dp"
                android:layout_height="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/thumbnail"
                android:background="@color/colorShimmerBackground" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <View

                android:layout_width="50dp"
                android:layout_height="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/thumbnail"
                android:background="@color/colorShimmerBackground" />

            <View

                android:layout_width="50dp"
                android:layout_height="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/thumbnail"
                android:background="@color/colorShimmerBackground" /> <View

            android:layout_width="50dp"
            android:layout_height="10dp"
            android:layout_marginStart="@dimen/margin_all_small"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/thumbnail"
            android:background="@color/colorShimmerBackground"
            android:layout_marginLeft="@dimen/margin_all_small" />

            <View

                android:layout_width="50dp"
                android:layout_height="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/thumbnail"
                android:background="@color/colorShimmerBackground" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <View

                android:layout_width="50dp"
                android:layout_height="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/thumbnail"
                android:background="@color/colorShimmerBackground" />

            <View

                android:layout_width="50dp"
                android:layout_height="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/thumbnail"
                android:background="@color/colorShimmerBackground" /> <View

            android:layout_width="50dp"
            android:layout_height="10dp"
            android:layout_marginStart="@dimen/margin_all_small"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/thumbnail"
            android:background="@color/colorShimmerBackground"
            android:layout_marginLeft="@dimen/margin_all_small" />

            <View

                android:layout_width="50dp"
                android:layout_height="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/thumbnail"
                android:background="@color/colorShimmerBackground" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <View

                android:layout_width="50dp"
                android:layout_height="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/thumbnail"
                android:background="@color/colorShimmerBackground" />

            <View

                android:layout_width="50dp"
                android:layout_height="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/thumbnail"
                android:background="@color/colorShimmerBackground" /> <View

            android:layout_width="50dp"
            android:layout_height="10dp"
            android:layout_marginStart="@dimen/margin_all_small"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/thumbnail"
            android:background="@color/colorShimmerBackground"
            android:layout_marginLeft="@dimen/margin_all_small" />

            <View

                android:layout_width="50dp"
                android:layout_height="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/thumbnail"
                android:background="@color/colorShimmerBackground" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <View

                android:layout_width="50dp"
                android:layout_height="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/thumbnail"
                android:background="@color/colorShimmerBackground" />

            <View

                android:layout_width="50dp"
                android:layout_height="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/thumbnail"
                android:background="@color/colorShimmerBackground" />
        </LinearLayout>
    </LinearLayout>





</RelativeLayout>
</androidx.cardview.widget.CardView>
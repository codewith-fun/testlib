<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:background="#fdf9f9" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <investwell.utils.customView.CustomTextViewBold
                    android:id="@+id/colorBlue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/scheme_icon"
                    android:gravity="left"

                    android:textColor="#000"
                    android:textSize="@dimen/textView_all_size_16"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/colorBlue"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:orientation="horizontal">


                    <investwell.utils.customView.CustomTextViewRegular
                        style="@style/textview_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/Benchmark" />

                    <investwell.utils.customView.CustomTextViewRegular
                        style="@style/textview_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                         />
                </LinearLayout>


                <ImageView
                    android:id="@+id/scheme_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:adjustViewBounds="true" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <investwell.utils.customView.CustomTextViewRegular
                    android:id="@+id/radio1"
                    style="@style/radio_style"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#84f362"
                    android:checked="true"
                     />


                <RadioButton
                        android:buttonTint="?attr/primaryButtonBackground"
                        android:textColor="?attr/primaryTextColor"
                    android:id="@+id/radio2"
                    style="@style/radio_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/txt_Sample"
                    android:visibility="invisible" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.8"
                    android:gravity="right|center"
                    android:visibility="invisible"
                    android:orientation="horizontal">


                    <investwell.utils.customView.CustomTextViewRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/RatingColon"
                        android:textSize="@dimen/textView_all_size_14" />

                    <androidx.appcompat.widget.AppCompatRatingBar
                        android:id="@+id/ratingBar"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:progressTint="@color/colorYellow"
                        android:rating="2.0"
                        android:stepSize="1.0" />
                </LinearLayout>

            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <investwell.utils.customView.CustomTextViewRegular
                            style="@style/heading_textview_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/NAV" />

                        <investwell.utils.customView.CustomTextViewBold
                            android:id="@+id/nav"
                            style="@style/textview_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lumpsum_txt_zero"
                            android:textSize="@dimen/textView_all_size_14"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="#b9b9b9" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">


                        <investwell.utils.customView.CustomTextViewRegular
                            style="@style/heading_textview_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/CAGR5Yr" />

                        <investwell.utils.customView.CustomTextViewBold
                            android:id="@+id/cagr"
                            style="@style/textview_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lumpsum_txt_zero"
                            android:textSize="@dimen/textView_all_size_14"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|top"
                        android:orientation="vertical">

                        <investwell.utils.customView.CustomTextViewRegular
                            style="@style/heading_textview_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                           android:layout_marginTop="10dp"
                            android:text="@string/ExitLoad" />

                        <investwell.utils.customView.CustomTextViewBold
                            android:id="@+id/exit_load"
                            style="@style/textview_style"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"

                            android:gravity="center"
                            android:text="@string/lumpsum_txt_zero"
                            android:textAlignment="center"
                            android:textSize="@dimen/textView_all_size_14"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="#b9b9b9" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|top"
                        android:orientation="vertical">


                        <investwell.utils.customView.CustomTextViewRegular
                            style="@style/heading_textview_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                           android:layout_marginTop="10dp"
                            android:text="@string/Corpus" />

                        <investwell.utils.customView.CustomTextViewBold
                            android:id="@+id/corpus"
                            style="@style/textview_style"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:gravity="center"
                            android:text="@string/lumpsum_txt_zero"
                            android:textSize="@dimen/textView_all_size_14"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

             <com.google.android.material.floatingactionbutton.FloatingActionButton
        app:backgroundTint="?attr/primaryButtonBackground"
                android:id="@+id/cart_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="-30dp"

                android:src="@mipmap/ic_add" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <investwell.utils.customView.CustomTextViewRegular
                            style="@style/textview_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/primaryButtonBackground"
                            android:padding="5dp"
                            android:text="@string/ShortTermReturns"
                            android:textColor="#fff" />


                        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:divider="#c9c9c9"
                            android:showDividers="middle">


                            <TableRow

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:divider="#c9c9c9"
                                android:showDividers="middle">

                                <!-- first element of the row-->
                                <investwell.utils.customView.CustomTextViewBold

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="18dip"
                                    android:text="@string/txt_1Month"
                                    android:textColor="#000"
                                    android:textSize="@dimen/textView_all_size_14"
                                    android:textStyle="bold" />

                                <investwell.utils.customView.CustomTextViewBold

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="18dip"
                                    android:text="@string/txt_3Month"
                                    android:textColor="#000"
                                    android:textSize="@dimen/textView_all_size_14"
                                    android:textStyle="bold" />


                                <investwell.utils.customView.CustomTextViewBold

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="18dip"
                                    android:text="@string/txt_6Month"
                                    android:textColor="#000"
                                    android:textSize="@dimen/textView_all_size_14"
                                    android:textStyle="bold" />

                                <investwell.utils.customView.CustomTextViewBold


                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="18dip"
                                    android:text="@string/txt_1Year"
                                    android:textColor="#000"
                                    android:textSize="@dimen/textView_all_size_14"
                                    android:textStyle="bold" />

                            </TableRow>


                            <TableRow

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:divider="#c9c9c9"
                                android:showDividers="middle">

                                <!-- first element of the row-->
                                <investwell.utils.customView.CustomTextViewRegular
                                    android:id="@+id/month_one"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="18dip"
                                    android:textColor="#000"
                                    android:textSize="@dimen/textView_all_size_14" />

                                <investwell.utils.customView.CustomTextViewRegular
                                    android:id="@+id/month_two"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="18dip"
                                    android:textColor="#000"
                                    android:textSize="@dimen/textView_all_size_14" />


                                <investwell.utils.customView.CustomTextViewRegular


                                    android:id="@+id/month_three"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="18dip"

                                    android:textColor="#000"
                                    android:textSize="@dimen/textView_all_size_14" />

                                <investwell.utils.customView.CustomTextViewRegular
                                    android:id="@+id/month_four"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="18dip"

                                    android:textColor="#000"
                                    android:textSize="@dimen/textView_all_size_14" />

                            </TableRow>


                        </TableLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <investwell.utils.customView.CustomTextViewRegular
                            style="@style/textview_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/primaryButtonBackground"
                            android:padding="5dp"
                            android:text="@string/LongTermReturns"
                            android:textColor="#fff" />


                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:divider="#c9c9c9"
                            android:showDividers="middle">


                            <TableRow

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:divider="#c9c9c9"
                                android:showDividers="middle">

                                <!-- first element of the row-->
                                <investwell.utils.customView.CustomTextViewBold

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="18dip"
                                    android:text="@string/txt_2Years"
                                    android:textColor="#000"
                                    android:textSize="@dimen/textView_all_size_14"
                                    android:textStyle="bold" />

                                <investwell.utils.customView.CustomTextViewBold


                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="18dip"
                                    android:text="@string/txt_3Years"
                                    android:textColor="#000"
                                    android:textSize="@dimen/textView_all_size_14"
                                    android:textStyle="bold" />


                                <investwell.utils.customView.CustomTextViewBold


                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="18dip"
                                    android:text="@string/txt_5_Years"
                                    android:textColor="#000"
                                    android:textSize="@dimen/textView_all_size_14"
                                    android:textStyle="bold" />

                                <investwell.utils.customView.CustomTextViewBold


                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="18dip"
                                    android:text="@string/txt_10Years"
                                    android:textColor="#000"
                                    android:textSize="@dimen/textView_all_size_14"
                                    android:textStyle="bold" />


                                <investwell.utils.customView.CustomTextViewRegular


                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="18dip"
                                    android:text="@string/txt_10Years"
                                    android:textColor="#000"
                                    android:textSize="@dimen/textView_all_size_14"
                                    android:visibility="gone" />

                            </TableRow>


                            <TableRow


                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:divider="#c9c9c9"
                                android:showDividers="middle">

                                <!-- first element of the row-->
                                <investwell.utils.customView.CustomTextViewRegular
                                    android:id="@+id/year_one"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="18dip"
                                    android:textColor="#000"
                                    android:textSize="@dimen/textView_all_size_14" />

                                <investwell.utils.customView.CustomTextViewRegular
                                    android:id="@+id/year_two"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="18dip"

                                    android:textColor="#000"
                                    android:textSize="@dimen/textView_all_size_14" />


                                <investwell.utils.customView.CustomTextViewRegular


                                    android:id="@+id/year_three"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="18dip"

                                    android:textColor="#000"
                                    android:textSize="@dimen/textView_all_size_14" />

                                <investwell.utils.customView.CustomTextViewRegular
                                    android:id="@+id/year_four"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="18dip"

                                    android:textColor="#000"
                                    android:textSize="@dimen/textView_all_size_14" />


                                <investwell.utils.customView.CustomTextViewRegular
                                    android:id="@+id/year_five"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="18dip"

                                    android:textColor="#000"
                                    android:textSize="@dimen/textView_all_size_14"
                                    android:visibility="gone" />

                            </TableRow>


                        </TableLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <investwell.utils.customView.CustomTextViewRegular
                style="@style/textview_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/primaryButtonBackground"
                android:padding="5dp"
                android:text="@string/Performanceback"
                android:textColor="#fff"
                android:visibility="gone"/>


            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/linechart"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:visibility="visible"/>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/colorBlue"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="horizontal">


                <TextView
                    style="@style/textview_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/Benchmark" />

                <TextView
                    android:id="@+id/benchmark"
                    style="@style/textview_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                     />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                >


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/textview_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/primaryButtonBackground"
                            android:padding="5dp"
                            android:text="@string/ShortTermReturns"
                            android:textColor="#fff" />


                        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:divider="#c9c9c9"
                            android:showDividers="middle">


                            <TableRow

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:divider="#c9c9c9"
                                android:showDividers="middle">

                                <!-- first element of the row-->
                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="18dip"
                                    android:text="@string/txt_1Month"
                                    android:textColor="#000"
                                    android:textSize="11dp"
                                    android:textStyle="bold" />

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="18dip"
                                    android:text="@string/txt_3Month"
                                    android:textColor="#000"
                                    android:textSize="11dp"
                                    android:textStyle="bold" />


                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="18dip"
                                    android:text="@string/txt_6Month"
                                    android:textColor="#000"
                                    android:textSize="11dp"
                                    android:textStyle="bold" />

                                <TextView


                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="18dip"
                                    android:text="@string/txt_1Year"
                                    android:textColor="#000"
                                    android:textSize="11dp"
                                    android:textStyle="bold" />

                            </TableRow>


                            <TableRow

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:divider="#c9c9c9"
                                android:showDividers="middle">

                                <!-- first element of the row-->
                                <TextView
                                    android:id="@+id/month_one2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="18dip"
                                    android:textColor="#000"
                                    android:textSize="11dp" />

                                <TextView
                                    android:id="@+id/month_two2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="18dip"
                                    android:textColor="#000"
                                    android:textSize="11dp" />


                                <TextView


                                    android:id="@+id/month_three2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="18dip"

                                    android:textColor="#000"
                                    android:textSize="11dp" />

                                <TextView
                                    android:id="@+id/month_four2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="18dip"

                                    android:textColor="#000"
                                    android:textSize="11dp" />

                            </TableRow>



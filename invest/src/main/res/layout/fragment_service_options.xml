<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/cheque"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_all_small"
                android:layout_weight="1"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:stateListAnimator="@animator/cardview_touch">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_serv_req_cheque"
                    android:contentDescription="@string/app_name" />

                <investwell.utils.customView.CustomTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/padding_all_very_small"
                    android:text="@string/service_request_collect_cheque"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/portfolio_report"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_all_small"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:stateListAnimator="@animator/cardview_touch"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_serv_req_port_report"
                    android:contentDescription="@string/app_name" />

                <investwell.utils.customView.CustomTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:maxLines="2"
                    android:padding="@dimen/padding_all_very_small"

                    android:text="@string/service_request_send_me_portfolio_report"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/document"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_all_small"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:stateListAnimator="@animator/cardview_touch"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_serv_req_collec_doc"
                    android:contentDescription="@string/app_name" />

                <investwell.utils.customView.CustomTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/service_request_collect_document"
                    android:padding="@dimen/padding_all_very_small"

                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/report_issue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_all_small"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:stateListAnimator="@animator/cardview_touch"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_serv_req_report_issue"
                    android:contentDescription="@string/app_name" />

                <investwell.utils.customView.CustomTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/service_request_report_an_issue"
                    android:padding="@dimen/padding_all_very_small"

                    android:textAlignment="center" />
            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/portfolio_change"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_all_small"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:stateListAnimator="@animator/cardview_touch"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_serv_req_change_port_folio"
                    android:contentDescription="@string/app_name" />

                <investwell.utils.customView.CustomTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/padding_all_very_small"

                    android:text="@string/service_request_changes_in_portfolio"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/call_me"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_all_small"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:stateListAnimator="@animator/cardview_touch"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_serv_req_call"
                    android:contentDescription="@string/app_name" />

                <investwell.utils.customView.CustomTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/service_request_call_me"
                    android:padding="@dimen/padding_all_very_small"

                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/meet_me"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_all_small"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:stateListAnimator="@animator/cardview_touch"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_serv_req_meet"
                    android:contentDescription="@string/app_name" />

                <investwell.utils.customView.CustomTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/service_request_meet_me"
                    android:padding="@dimen/padding_all_very_small"

                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/others"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_all_small"
                android:layout_weight="1"
                android:visibility="invisible"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:stateListAnimator="@animator/cardview_touch"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_serv_req_others"
                    android:contentDescription="@string/app_name" />

                <investwell.utils.customView.CustomTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/service_request_others"
                    android:padding="@dimen/padding_all_very_small"

                    android:textAlignment="center" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
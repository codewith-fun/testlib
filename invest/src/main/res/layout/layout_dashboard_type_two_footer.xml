<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="?attr/primaryButtonBackground"
    android:padding="@dimen/padding_all_very_small">

    <ImageView
        android:id="@+id/iv_dashboard_cross_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="@string/app_name"
        android:focusable="true"
        android:padding="@dimen/padding_all_very_small"
        android:src="@mipmap/ic_dashboard_type_two_cross" />

    <investwell.utils.customView.CustomButton
        android:id="@+id/btn_dashboard_type_two_login"
        android:layout_width="@dimen/btn_mini_width"
        android:layout_height="@dimen/btn_mini_height"
        android:layout_margin="@dimen/margin_all_very_small"
        android:layout_toStartOf="@+id/btn_dashboard_type_two_enquiry"
        android:layout_toLeftOf="@+id/btn_dashboard_type_two_enquiry"
        android:background="?attr/secondaryBtnDrawable"
        android:padding="@dimen/padding_all_very_small"
        android:text="@string/dashboard_type_two_login_btn_text"
        android:textAllCaps="false"
        android:textColor="?attr/secondaryButtonTextColor"
        android:textSize="@dimen/textView_all_size_14" />

    <investwell.utils.customView.CustomButton
        android:id="@+id/btn_dashboard_type_two_enquiry"
        android:layout_width="@dimen/btn_mini_width"
        android:layout_height="@dimen/btn_mini_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/margin_all_very_small"

        android:layout_marginEnd="@dimen/margin_all_very_small"
        android:layout_marginStart="@dimen/margin_all_very_small"
        android:layout_marginTop="@dimen/margin_all_very_small"
        android:background="?attr/tertiaryBtnDrawable"
        android:text="@string/dashboard_type_two_enquiry_btn_text"
        android:textAllCaps="false"
        android:textColor="?attr/tertiaryButtonTextColor"
        android:textSize="@dimen/textView_all_size_14" />
</RelativeLayout>
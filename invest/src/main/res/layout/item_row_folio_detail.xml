<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
   >

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_detail_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10dp"

            style="@style/CardViewStyle"
           >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="vertical"
                    android:layout_toLeftOf="@+id/llScheme">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="10dp">

                        <investwell.utils.customView.CustomTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/my_folio_fund_name_txt"
                            android:textColor="?attr/primaryTextColor"
                            android:textSize="@dimen/textView_all_size_10" />


                        <investwell.utils.customView.CustomTextViewBold
                            android:id="@+id/tvSchemName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/primaryTextColor"

                            android:textSize="@dimen/textView_all_size_14"
                                android:textStyle="bold" />

                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/ll_row_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_scheme_value"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/folio_detail_investor_txt"
                                android:textColor="?attr/primaryTextColor"

                                android:textSize="@dimen/textView_all_size_10" />

                            <TextView
                                android:id="@+id/tv_investor_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="?attr/primaryTextColor"

                                android:textSize="@dimen/textView_all_size_14"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"

                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_folio_placeholder"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/folio_detail_folio_txt"
                                android:textColor="?attr/primaryTextColor"

                                android:textSize="@dimen/textView_all_size_10" />

                            <TextView
                                android:id="@+id/tv_folio_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="?attr/primaryTextColor"

                                android:textSize="@dimen/textView_all_size_14"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/ll_row_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dividend_one"
                        android:layout_marginTop="-2dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/folio_detail_profile_id_txt"
                                android:textColor="?attr/secondaryTextColor"
                                android:textSize="@dimen/textView_all_size_10" />

                            <TextView
                                android:id="@+id/tv_ucc_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:textColor="?attr/primaryTextColor"

                                android:textSize="@dimen/textView_all_size_14"
                                android:textStyle="bold"

                                 />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/folio_details_holding_txt"
                                android:textColor="?attr/secondaryTextColor"
                                android:textSize="@dimen/textView_all_size_10" />

                            <TextView
                                android:id="@+id/tv_holding_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:textColor="?attr/primaryTextColor"

                                android:textSize="@dimen/textView_all_size_14"
                                android:textStyle="bold"
                             />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="@string/folio_details_pan_txt"
                                android:textColor="?attr/secondaryTextColor"
                                android:textSize="@dimen/textView_all_size_10" />

                            <TextView
                                android:id="@+id/tv_pan_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="?attr/primaryTextColor"

                                
                                android:textSize="@dimen/textView_all_size_10"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llScheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tvSchemeNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="?attr/primaryTextColor"

                        android:textSize="26dp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tvscheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="?attr/primaryTextColor"

                        
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>


        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</LinearLayout>
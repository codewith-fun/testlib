<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_goal_category"
    android:layout_width="90dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_all_very_small">

    <RelativeLayout
        android:id="@+id/rl_goal_category_img"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_goal_category_type_a"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/iv_goal_category"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/app_icon_s" />
    </RelativeLayout>

    <investwell.utils.customView.CustomTextViewBold
        android:id="@+id/tv_goal_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_goal_category_img"
        android:layout_margin="@dimen/margin_all_very_small"
        android:maxLines="1"
        android:text="@string/app_name"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="@dimen/textView_all_size_14"
        android:textStyle="bold" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/rl_dashboard_parent_container"
    android:layout_height="wrap_content">


    <investwell.utils.customView.CustomTextViewRegular
        android:id="@+id/colorBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="@dimen/textView_all_size_12"
        android:layout_margin="5dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textColor="?attr/primaryTextColor"
        android:layout_toLeftOf="@+id/total_value"
        android:layout_alignParentStart="true" />


    <investwell.utils.customView.CustomTextViewRegular
        android:id="@+id/total_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/textView_all_size_12"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textColor="?attr/primaryTextColor"

        android:layout_marginBottom="5dp"
        android:layout_toLeftOf="@+id/next_arrow" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="3dp"
        android:layout_below="@+id/scheme"
        android:background="#f2f2f2" />

    <ImageView
        android:id="@+id/next_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/forward_arrow" />


</RelativeLayout>
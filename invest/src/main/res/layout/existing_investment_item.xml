<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5dp"
        app:cardCornerRadius="@dimen/margin_10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <investwell.utils.customView.CustomTextViewBold
                android:id="@+id/tv_schemename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center|left"
                android:text=""
                android:textColor="@color/colorPurple"
                android:textSize="@dimen/textView_all_size_14" />

            <investwell.utils.customView.CustomTextViewRegular
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_schemename"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_5dp"
                android:gravity="center|left"
                android:text=""
                android:textColor="?attr/primaryTextColor"
                android:textSize="@dimen/textView_all_size_14" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/nfo_cart">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignParentLeft="true"
                        android:orientation="vertical">


                        <investwell.utils.customView.CustomTextViewRegular

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center|left"
                            android:text="@string/current_txt"

                            android:textSize="@dimen/textView_all_size_14" />

                        <investwell.utils.customView.CustomTextViewRegular
                            android:id="@+id/tv_investment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center|left"
                            android:text=""
                            android:textColor="?attr/primaryTextColor"
                            android:textSize="@dimen/textView_all_size_14" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llLast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical">
                        <investwell.utils.customView.CustomTextViewRegular

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"

                            android:text="@string/transfer_holding_folio_number_txt"

                            android:textSize="@dimen/textView_all_size_14" />

                    </LinearLayout>

                    <investwell.utils.customView.CustomTextViewRegular
                        android:id="@+id/tv_folio"
                        android:layout_below="@+id/llLast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:gravity="center|right"
                        android:text=""
                        android:textColor="?attr/primaryTextColor"
                        android:textSize="@dimen/textView_all_size_14" />

                </RelativeLayout>


            </RelativeLayout>

            <ImageView
                android:id="@+id/cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_schemename"
                android:layout_alignParentRight="true"
                android:layout_marginTop="3dp"
                android:padding="5dp"
                android:src="@mipmap/add_cart"
                android:visibility="invisible" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>